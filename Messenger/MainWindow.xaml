<Window x:Class="Messenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите действие:" HorizontalAlignment="Center" Margin="5"/>

        <Button Content="Создать новый чат" Grid.Row="1" Click="CreateChatButton_Click" Margin="5"/>
        <Button Content="Подключиться к чату" Grid.Row="2" Click="JoinChatButton_Click" Margin="5"/>
    </Grid>
</Window>
