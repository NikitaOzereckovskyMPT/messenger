<Window x:Class="YourNamespace.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="ChatListBox" VerticalAlignment="Top" DisplayMemberPath="Text"/>
        <TextBox Name="MessageTextBox" VerticalAlignment="Bottom" Height="50"/>
        <Button Content="Send" Width="50" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="SendButton_Click"/>
    </Grid>
</Window>
